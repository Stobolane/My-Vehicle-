<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.vehiclesystem.controllers.HomeController"
            style="-fx-background-color: #121212;">

    <top>
        <HBox style="-fx-background-color: #000000; -fx-padding: 20;" alignment="CENTER">
            <Label text="VEHICLE RENTAL SYSTEM"
                   style="-fx-text-fill: #ffffff; -fx-font-size: 28; -fx-font-weight: bold;"/>
