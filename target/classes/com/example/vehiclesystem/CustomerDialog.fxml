<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<GridPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.example.vehiclesystem.controllers.CustomerDialog"
          hgap="10" vgap="10" style="-fx-padding: 20;">

    <Label text="Full Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Phone:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="phoneField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="License Number:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="licenseField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.rowIndex="5" GridPane.columnSpan="2">
        <Button text="Cancel" onAction="#handleCancel"/>
        <Button text="Save" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" onAction="#handleSave"/>
    </HBox>
</GridPane>